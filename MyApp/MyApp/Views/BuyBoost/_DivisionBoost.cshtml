@using MyApp.DataStructure
@model MyApp.Models.BuyBoost.DivisionBoostModel

<div>
    <h2>Division Boost</h2>

    <form asp-action="DivisionBoost">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="StartingDivision" class="control-label"></label>
            @Html.DropDownListFor(x => x.StartingDivision, Html.GetEnumSelectList<Division>())

            <br />
            <label asp-for="StartingLeague" class="control-label"></label>
            @Html.DropDownListFor(x => x.StartingLeague, Html.GetEnumSelectList<League>())

        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </form>

</div>


